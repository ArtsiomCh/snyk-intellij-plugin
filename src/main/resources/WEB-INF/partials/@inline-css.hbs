<style>
    a {
        color: {{linkColor}};
    }
    body {
        background-color: {{bgColor}};
        font-family: {{#if fontFamily}}{{fontFamily}}, {{/if}}"Prenton", "Gill Sans", "Calibri", sans-serif;
        color: {{textColor}};
        margin: 0;
    }

    body::-webkit-scrollbar {
        width: 0.5em;
        color: {{bgColor}};
        background-color: {{bgColor}};
    }

    body::-webkit-scrollbar-track {
        color: {{bgColor}};
        background-color: {{bgColor}};
    }

    body::-webkit-scrollbar-thumb {
        background-color: {{inactiveTextColor}};
    }

    .issue-title__name {
        margin-bottom: .5em;
    }

    .issue-card {
        border-bottom-color: {{separatorFgColor}};
        border-bottom-style: solid;
        border-bottom-width: 1px;
        padding-bottom: .75em;
        padding-top: .75em;
    }

    .remediation {
        padding-top: .5em;
    }
    .issue-card:hover {
        background-color: {{separatorFgColor}};
    }
    .issue-body {
        border-left-width: 2px;
        border-left-style: solid;
        border-left-color: black;
        padding-left: .5em;
        margin-left: .5em;
    }

    .issue-body-high {
        border-left-color: #b31a6b;
    }

    .issue-body-medium {
        border-left-color: #c27100;
    }

    .issue-body-low {
        border-left-color: #595775;
    }

    .issue-subhead {
        font-weight: bold;
    }

    .indent-block {
        padding-top: .25em;
        padding-left: 1em;
    }
    .tree-level {
        padding-top: .25em;
        display: list-item;
        margin-left: 1em;
        list-style-type: circle;
    }


    /* ————————————————————–
    Tree core styles
    */
    .tree {
        padding: 0;
        margin-left: 1em;
        margin-top: .5em;

    }

    .tree input {
        position: absolute;
        clip: rect(0, 0, 0, 0);
    }

    .tree input ~ ul {
        padding: 0;
        display: none;
    }

    .tree input:checked ~ ul { display: block; }

    /* ————————————————————–
      Tree rows
    */
    .tree li {
        line-height: 1.2;
        position: relative;
        padding: 0 0 1em 1em;
        list-style-type: none;
    }

    .tree ul li {
        padding: .25em 0 0 1em;
    }

    .tree > li:last-child { padding-bottom: 0; }

    /* ————————————————————–
      Tree labels
    */
    .tree_label {
        position: relative;
        display: inline-block;
    }

    label.tree_label {
        cursor: pointer;
    }

    /*label.tree_label:hover { color: #666; }*/

    /* ————————————————————–
      Tree expanded icon
    */
    label.tree_label:before {
        background: {{textColor}};
        color: {{bgColor}};
        position: relative;
        z-index: 1;
        float: left;
        margin: 0 1em 0 -2em;
        width: 1em;
        height: 1em;
        border-radius: 1em;
        content: '+';
        text-align: center;
        line-height: .9em;
    }

    :checked ~ label.tree_label:before { content: '–'; }

    /* ————————————————————–
      Tree branches
    */
    .tree li:before {
        position: absolute;
        top: 0;
        bottom: 0;
        left: -.5em;
        display: block;
        width: 0;
        border-left: 1px solid #777;
        content: "";
    }

    .tree_label:after {
        position: absolute;
        top: 0;
        left: -1.5em;
        display: block;
        height: 0.5em;
        width: 1em;
        border-bottom: 1px solid #777;
        border-left: 1px solid #777;
        border-radius: 0 0 0 .3em;
        content: '';
    }

    label.tree_label:after { border-bottom: 0; }

    :checked ~ label.tree_label:after {
        border-radius: 0 .3em 0 0;
        border-top: 1px solid #777;
        border-right: 1px solid #777;
        border-bottom: 0;
        border-left: 0;
        bottom: 0;
        top: 0.5em;
        height: auto;
    }

    .tree li:last-child:before {
        height: .25em;
        bottom: auto;
    }

    .tree > li:last-child:before { display: none; }

    .tree_custom {
        display: block;
        background: #eee;
        padding: 1em;
        border-radius: 0.3em;
    }


    /*************************/

    main {
        padding: 1em;
        display: block;
        flex: 1 0 auto;
    }

    p,
    pre,
    blockquote,
    ul,
    ol,
    dl,
    figure {
        margin: 0;
    }

    ol, ul {
        list-style: none;
        padding: 0;
    }

    svg:not(:root) {
        display: inline-block;
        fill: currentColor;
        overflow: hidden;
        vertical-align: middle;
    }

    .sampler {
        border: 1px solid white;
    }

    .homelink {
        padding-bottom: 1em;
        float: right;
    }

    .issue-body-high .vulnerable-dep .mvn-version::after {
        color: #b31a6b;
        content: "◀︎";
    }

    .issue-body-medium .vulnerable-dep .mvn-version::after {
        color: #c27100;
        content: "◀︎";
    }

    .issue-body-low .vulnerable-dep .mvn-version::after {
        color: #595775;
        content: "◀︎";
    }


    .mvn-group {

    }

    .mvn-name {

    }

    a .mvn-version {
        background-color: inherit;
        color: inherit;
        border: none;
        padding: 0px;
    }

    a .mvn-version::before {
        content: " @ ";
    }

    .mvn-version {
        border: 1px dotted {{textColor}};
        border-radius: .25em;
        padding-left: 1px;
        padding-right: 1px;
    }

    .project-title {
        padding: .25em;
        width: 100%;
        border-radius: .25em;
        color: {{bgColor}};
        background: {{textColor}};
    }
    .hourglass path {
        fill: {{textColor}};
    }

    .hourglass path[stroke] {
        stroke: {{textColor}};
        fill: rgba(0,0,0,0);
    }

    .anilogo {
        overflow: visible !important;
        max-height: 50%;
    }



    .lds-ellipsis {
        display: inline-block;
        position: relative;
        width: 64px;
        height: 64px;
    }
    .lds-ellipsis div {
        position: absolute;
        top: 27px;
        width: 11px;
        height: 11px;
        border-radius: 50%;
        background: #fff;
        animation-timing-function: cubic-bezier(0, 1, 1, 0);
    }
    .lds-ellipsis div:nth-child(1) {
        left: 6px;
        animation: lds-ellipsis1 0.6s infinite;
    }
    .lds-ellipsis div:nth-child(2) {
        left: 6px;
        animation: lds-ellipsis2 0.6s infinite;
    }
    .lds-ellipsis div:nth-child(3) {
        left: 26px;
        animation: lds-ellipsis2 0.6s infinite;
    }
    .lds-ellipsis div:nth-child(4) {
        left: 45px;
        animation: lds-ellipsis3 0.6s infinite;
    }
    @keyframes lds-ellipsis1 {
        0% {
            transform: scale(0);
        }
        100% {
            transform: scale(1);
        }
    }
    @keyframes lds-ellipsis3 {
        0% {
            transform: scale(1);
        }
        100% {
            transform: scale(0);
        }
    }
    @keyframes lds-ellipsis2 {
        0% {
            transform: translate(0, 0);
        }
        100% {
            transform: translate(19px, 0);
        }
    }

    {{!--
    .upgrade-link {
        padding-top: 0;
        padding-left: .25em;
        padding-right: .25em;
        padding-bottom: 1px;
        background: #692023;
        border-radius: 1em;
        color: {{textColor}};
        cursor: pointer;
    }
    --}}

    .upgrade-link {
        color: #9f2512;
        cursor: pointer;
        text-decoration: underline;
        text-decoration-color: #9f2512;
        text-decoration-style: dashed;
    }
</style>
